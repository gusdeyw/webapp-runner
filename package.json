{
    "name": "laravel-deployment-system",
    "productName": "Laravel App Deployer",
    "version": "1.0.0",
    "description": "A comprehensive desktop application deployment system that automates the installation and management of Laravel applications",
    "main": "src/main.js",
    "author": "Your Company",
    "license": "MIT",
    "keywords": [
        "laravel",
        "deployment",
        "electron",
        "php",
        "mysql",
        "nginx",
        "desktop-app"
    ],
    "scripts": {
        "start": "electron .",
        "dev": "electron . --dev",
        "build": "electron-builder",
        "build:win": "electron-builder --win",
        "build:mac": "electron-builder --mac",
        "build:linux": "electron-builder --linux",
        "pack": "electron-builder --dir",
        "test": "jest",
        "lint": "eslint src/**/*.js",
        "lint:fix": "eslint src/**/*.js --fix"
    },
    "dependencies": {
        "electron": "^27.0.0",
        "express": "^4.18.2",
        "node-fetch": "^3.3.2",
        "fs-extra": "^11.1.1",
        "yauzl": "^2.10.0",
        "node-windows": "^1.0.0-beta.8",
        "portfinder": "^1.0.32",
        "bcrypt": "^5.1.1",
        "mysql2": "^3.6.0",
        "archiver": "^6.0.1",
        "semver": "^7.5.4",
        "chalk": "^5.3.0",
        "commander": "^11.0.0"
    },
    "devDependencies": {
        "electron-builder": "^24.6.4",
        "eslint": "^8.48.0",
        "jest": "^29.6.4",
        "nodemon": "^3.0.1"
    },
    "build": {
        "appId": "com.yourcompany.laraveldeployer",
        "productName": "Laravel App Deployer",
        "directories": {
            "output": "dist"
        },
        "files": [
            "src/**/*",
            "assets/**/*",
            "runtime/**/*",
            "node_modules/**/*"
        ],
        "win": {
            "target": "nsis",
            "requestedExecutionLevel": "requireAdministrator",
            "icon": "assets/icons/icon.ico"
        },
        "mac": {
            "target": "dmg",
            "icon": "assets/icons/icon.icns"
        },
        "linux": {
            "target": "AppImage",
            "icon": "assets/icons/icon.png"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true
        }
    },
    "engines": {
        "node": ">=16.0.0"
    }
}